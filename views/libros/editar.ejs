<% include ../layouts/cabecera.ejs %> 
<br>
<div class="card">
    <div class="card-header">
        <h2 class="text-center">Edita un libro</h2>
    </div>
    <div class="card-body">
        <h5 class="card-title">Actualiza la informaci√≥n</h5>
        <form method="POST" action="../actualizar/" enctype="multipart/form-data">
            <br>
            <input type="hidden" name="id" value="<%= libro.id %> ">
        
            <div class="form-group">
                <label for="my-input">Nombre:</label>
                <input id="txtNombre" class="form-control" type="text" required name="nombre" value="<%=libro.nombre%>">
            </div>
        
            <div class="form-group">
                <label for="my-input">Imagen:</label>
                <img class="img-thumbnail" src="../../images/<%=libro.imagen%> " width="100" alt="portada">
                <input id="fileImagen" class="form-control-file" type="file" name="archivo">
            </div>
            <br>
            <button type="submit" class="btn btn-lg btn-warning">Actualizar</button>
            <a type="button" class="btn btn-lg btn-danger" href="/libros">Cancelar</a>
        </form>
    </div>
</div>



